    <script>
        // Exchange rates data
        const exchangeRates = {
            philippines: {
                usdToPhp: 56.85,
                providers: {
                    paypal: { rate: 55.2, fixedFee: 4.99, percentFee: 0.049, name: 'PayPal', speed: 'Instant', method: 'Bank/Wallet' },
                    wise: { rate: 56.7, fixedFee: 3.84, percentFee: 0.0043, name: 'Wise', speed: '1-2 days', method: 'Bank Transfer' },
                    remitly: { rate: 56.9, fixedFee: 2.99, percentFee: 0.0025, name: 'Remitly', speed: 'Minutes-24hrs', method: 'Bank/Cash' },
                    westernunion: { rate: 55.8, fixedFee: 5.00, percentFee: 0.01, name: 'Western Union', speed: 'Minutes', method: 'Cash Pickup' },
                    moneygram: { rate: 55.9, fixedFee: 4.99, percentFee: 0.012, name: 'MoneyGram', speed: 'Minutes', method: 'Cash Pickup' },
                    gcash: { rate: 56.4, fixedFee: 0, percentFee: 0.015, name: 'GCash Padala', speed: 'Instant', method: 'GCash Wallet' },
                    worldremit: { rate: 56.6, fixedFee: 3.99, percentFee: 0.005, name: 'WorldRemit', speed: '1-3 days', method: 'Bank/Cash' },
                    xoom: { rate: 55.5, fixedFee: 4.99, percentFee: 0.01, name: 'Xoom (PayPal)', speed: 'Minutes', method: 'Bank/Cash' },
                    ria: { rate: 56.1, fixedFee: 5.99, percentFee: 0.008, name: 'Ria Money Transfer', speed: 'Minutes-1 day', method: 'Cash Pickup' },
                    sendwave: { rate: 56.8, fixedFee: 0, percentFee: 0.02, name: 'Sendwave', speed: 'Minutes', method: 'Bank Transfer' },
                    pangea: { rate: 56.95, fixedFee: 2.49, percentFee: 0.002, name: 'Pangea Money Transfer', speed: 'Minutes-1 day', method: 'Bank Transfer' },
                    skrill: { rate: 56.2, fixedFee: 3.99, percentFee: 0.0149, name: 'Skrill', speed: '1-2 days', method: 'Bank/Wallet' }
                }
            },
            mexico: {
                usdToMxn: 17.23,
                providers: {
                    paypal: { rate: 16.8, fixedFee: 4.99, percentFee: 0.049, name: 'PayPal', speed: 'Instant', method: 'Bank/Wallet' },
                    wise: { rate: 17.18, fixedFee: 4.11, percentFee: 0.0045, name: 'Wise', speed: '1-2 days', method: 'Bank Transfer' },
                    remitly: { rate: 17.21, fixedFee: 3.99, percentFee: 0.003, name: 'Remitly', speed: 'Minutes-24hrs', method: 'Bank/Cash' },
                    westernunion: { rate: 16.9, fixedFee: 5.00, percentFee: 0.01, name: 'Western Union', speed: 'Minutes', method: 'Cash Pickup' },
                    moneygram: { rate: 16.95, fixedFee: 4.99, percentFee: 0.012, name: 'MoneyGram', speed: 'Minutes', method: 'Cash Pickup' },
                    xoom: { rate: 17.05, fixedFee: 4.99, percentFee: 0.01, name: 'Xoom (PayPal)', speed: 'Minutes', method: 'Bank/Cash' },
                    worldremit: { rate: 17.12, fixedFee: 3.99, percentFee: 0.005, name: 'WorldRemit', speed: '1-3 days', method: 'Bank/Cash' },
                    ria: { rate: 16.98, fixedFee: 5.99, percentFee: 0.008, name: 'Ria Money Transfer', speed: 'Minutes-1 day', method: 'Cash Pickup' },
                    sendwave: { rate: 17.15, fixedFee: 0, percentFee: 0.02, name: 'Sendwave', speed: 'Minutes', method: 'Bank Transfer' },
                    ofx: { rate: 17.19, fixedFee: 4.00, percentFee: 0.004, name: 'OFX', speed: '1-2 days', method: 'Bank Transfer' },
                    currencyfair: { rate: 17.16, fixedFee: 3.00, percentFee: 0.0035, name: 'CurrencyFair', speed: '2-3 days', method: 'Bank Transfer' },
                    azimo: { rate: 17.08, fixedFee: 2.99, percentFee: 0.005, name: 'Azimo', speed: 'Minutes-1 day', method: 'Bank/Cash' }
                }
            }
        };

        let selectedCountry = 'philippines';
        let userCount = 1247;

        // Simulate user counter growth
        setInterval(() => {
            userCount += Math.floor(Math.random() * 3);
            document.getElementById('userCount').textContent = userCount.toLocaleString();
        }, 45000);

        function setAmount(amount) {
            document.getElementById('transferAmount').value = amount;
        }

        function selectCountry(country) {
            selectedCountry = country;
            document.querySelector(`input[value="${country}"]`).checked = true;
        }

        function calculateTransfer(provider, amount, country) {
            const providerData = exchangeRates[country].providers[provider];
            const fixedFee = providerData.fixedFee;
            const percentageFee = amount * providerData.percentFee;
            const totalFees = fixedFee + percentageFee;
            const amountAfterFees = amount - totalFees;
            const localCurrencyReceived = amountAfterFees * providerData.rate;
            
            return {
                provider: providerData.name,
                providerKey: provider,
                usdSent: amount,
                totalFees: totalFees,
                localCurrencyReceived: localCurrencyReceived,
                effectiveRate: localCurrencyReceived / amount,
                fixedFee: fixedFee,
                percentageFee: percentageFee,
                speed: providerData.speed,
                method: providerData.method,
                exchangeRate: providerData.rate
            };
        }

        function calculateRates() {
            const amount = parseFloat(document.getElementById('transferAmount').value);
            if (!amount || amount < 1) {
                alert('Please enter a valid amount');
                return;
            }

            const btn = document.getElementById('calculateBtn');
            btn.disabled = true;
            btn.innerHTML = '<div class="spinner"></div>Calculating Best Rates...';

            setTimeout(() => {
                const providers = Object.keys(exchangeRates[selectedCountry].providers);
                const comparisons = providers.map(provider => 
                    calculateTransfer(provider, amount, selectedCountry)
                ).sort((a, b) => b.localCurrencyReceived - a.localCurrencyReceived);

                displayResults(comparisons);
                
                btn.disabled = false;
                btn.innerHTML = '<span>🧮</span>Compare Rates';
            }, 1500);
        }

        function displayResults(comparisons) {
            const currencySymbol = selectedCountry === 'philippines' ? '₱' : '$';
            const currencyCode = selectedCountry === 'philippines' ? 'PHP' : 'MXN';
            
            const bestOption = comparisons[0];
            const paypalComparison = comparisons.find(c => c.providerKey === 'paypal');
            
            // Show savings alert
            if (paypalComparison && bestOption.providerKey !== 'paypal') {
                const savings = bestOption.localCurrencyReceived - paypalComparison.localCurrencyReceived;
                document.getElementById('savingsText').textContent = 
                    `This transfer: You could save ${currencySymbol}${savings.toLocaleString('en-US', {maximumFractionDigits: 0})} by using ${bestOption.provider} instead of PayPal`;
                document.getElementById('savingsAlert').style.display = 'block';
            }

            // Display top 3 providers
            const resultsHtml = comparisons.slice(0, 3).map((comparison, index) => {
                const isPayPal = comparison.providerKey === 'paypal';
                const isBest = index === 0;
                
                return `
                    <div class="provider-card ${isBest ? 'best' : ''} ${isPayPal ? 'paypal' : ''}">
                        <div class="provider-header">
                            <div class="provider-name">
                                <h3>${comparison.provider}</h3>
                                ${isBest ? '<span class="badge best">✓ Best Rate</span>' : ''}
                                ${isPayPal ? '<span class="badge current">Your Current Choice</span>' : ''}
                            </div>
                            <div class="received-amount">
                                <div class="amount">${currencySymbol}${comparison.localCurrencyReceived.toLocaleString('en-US', {maximumFractionDigits: 0})}</div>
                                <div class="currency">${currencyCode} Received</div>
                            </div>
                        </div>
                        <div class="provider-details">
                            <div class="detail-item">
                                <h4>Exchange Rate</h4>
                                <p>${comparison.exchangeRate.toFixed(2)}</p>
                            </div>
                            <div class="detail-item">
                                <h4>Total Fees</h4>
                                <p>$${comparison.totalFees.toFixed(2)}</p>
                            </div>
                            <div class="detail-item">
                                <h4>Speed</h4>
                                <p>${comparison.speed}</p>
                            </div>
                            <div class="detail-item">
                                <h4>Method</h4>
                                <p>${comparison.method}</p>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            document.getElementById('providerResults').innerHTML = resultsHtml;
            document.getElementById('results').style.display = 'block';
            
            // Store data for payment modal
            window.currentComparisons = { bestOption, paypalComparison, currencySymbol };
        }

        function showPayment() {
            if (window.currentComparisons) {
                const { bestOption, paypalComparison, currencySymbol } = window.currentComparisons;
                if (paypalComparison && bestOption.providerKey !== 'paypal') {
                    const savings = bestOption.localCurrencyReceived - paypalComparison.localCurrencyReceived;
                    document.getElementById('modalSavings').textContent = 
                        `${currencySymbol}${savings.toLocaleString('en-US', {maximumFractionDigits: 0})}`;
                }
            }
            document.getElementById('paymentModal').style.display = 'flex';
        }

        function hidePayment() {
            document.getElementById('paymentModal').style.display = 'none';
        }

        function processPayment() {
            alert('Payment integration coming soon! For now, enjoy the free comparison.');
            hidePayment();
        }

        // Handle country selection clicks
        document.addEventListener('click', function(e) {
            if (e.target.closest('.country-option')) {
                const option = e.target.closest('.country-option');
                const radio = option.querySelector('input[type="radio"]');
                radio.checked = true;
                selectedCountry = radio.value;
            }
        });
    </script>
</body>
</html>
